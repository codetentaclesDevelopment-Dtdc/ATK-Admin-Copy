@{

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@model IEnumerable<DtDc_Billing.Entity_FR.TransactionView>


<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h4>Check Booking List</h4>
                </div>

                <div class="form-horizontal">
                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">




                                    @using (Html.BeginForm())
                                    {


                                        if (ViewBag.Custid != null)
                                        {
                                            <div class="col-md-3">
                                                <input name="Custid" style="margin-right:10px" class="form-control" id="custid" value="@ViewBag.Custid" placeholder="Customer id " type="text">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-3">
                                                <input name="Custid" style="margin-right:10px" class="form-control" id="custid" placeholder="Customer id " type="text">
                                            </div>
                                        }
                                        if (ViewBag.fromdate != null)
                                        {
                                            <div class="col-md-3">
                                                <input name="Fromdatetime" class="form-control" id="datepicker" value="@ViewBag.fromdate" placeholder="From Date" type="text">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-3">
                                                <input name="Fromdatetime" class="form-control" id="datepicker" placeholder="From Date" type="text">
                                            </div>
                                        }
                                        if (ViewBag.todate != null)
                                        {
                                            <div class="col-md-3">
                                                <input style="margin-right:50px" value="@ViewBag.todate" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-3">
                                                <input style="margin-right:50px" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                                            </div>
                                        }
                                        <div class="col-md-3">
                                            <input type="submit" class="btn btn-primary  col-sm-12" id="Show" name="Show" value="Show" />
                                            <input type="submit" value="Export to Excel" name="Submit" class="btn btn-success sbmt col-sm-12 pull-right" />
                                        </div>


                                    }
                                </div>
                            </div>
                        </div>

                        <table id="check-booking-list" class="table table-striped table-bordered table-responsive height-450">
                            <thead>
                                <tr>
                                    <th>
                                        Sr No
                                    </th>
                                    <th>
                                        Consignment no
                                    </th>
                                    <th>
                                        Weight
                                    </th>
                                    <th>
                                        Destination
                                    </th>
                                    <th>
                                        Pincode
                                    </th>

                                    <th>
                                        Type
                                    </th>
                                    <th>
                                        Mode
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Booking Date
                                    </th>
                                    <th>
                                        Insurance
                                    </th>
                                    <th>
                                        Claim amount
                                    </th>
                                    <th>
                                        Percentage
                                    </th>
                                    <th>
                                        Risk surcharge
                                    </th>
                                    <th>
                                        Other Charges
                                    </th>
                                    <th>
                                        Total
                                    </th>
                                    <th>
                                        Receiver(To) Name
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 1;
                                    foreach (var item in Model)
                                    {
                                                                <tr>

                                                                    <td>
                                                                        @i
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Consignment_no)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.chargable_weight)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Name)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Pincode)
                                                                    </td>

                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Type_t)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Mode)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Amount)
                                                                    </td>
                                                                    <td>
                                                                        @item.booking_date.Value.ToString("dd/MM/yyyy")
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Insurance)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Claimamount)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Percentage)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Risksurcharge)
                                                                    </td>
                                                                    <td>
                                                                        @((item.Packingcharges?? 0) + (item.Handlingcharges?? 0) + (item.GEC3Additioncharges?? 0))
                                                                    </td>
                                                                    <td>
                                                                        @(item.Amount + (item.Packingcharges ?? 0) + (item.Handlingcharges ?? 0) + (item.GEC3Additioncharges?? 0) + (item.Risksurcharge ?? 0))
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.ReceiverName)
                                                                    </td>
                                                                </tr>

                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                        <br>
                        <!-- /input-group -->

                        <div class="col-sm-3 " style="float: right" ;>
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-danger total-label">Total</button>
                                </div>
                                <!-- /btn-group -->
                                <input type="text" class="form-control total-amount" value="@ViewBag.totalamt">
                            </div>
                        </div>
                        <!-- /input-group -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


