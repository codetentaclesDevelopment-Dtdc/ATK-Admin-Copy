@*@model DtDc_Billing.Models.ImportDataModel*@
@{

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-sm-12">

            <div class="box box-info">
                <div class="box-header with-border">
                    <h4>UPDATE FROM EXCEL</h4>
                </div>

                <div class="form-horizontal">
                    <span class="text-danger"><strong>note* : File extension should be xlsx</strong></span>
                    <div class="box-body">
                        <div class="row">
                            
                            <div class="col-md-12">
                                <div class="form-group">
                                    
                                    @using (Html.BeginForm("UpdateData", "Booking", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <input type="hidden" value="1" name="type">
                                        <div class="col-md-3">
                                            <label for="file"><strong id="up-txt"> Update Actual Weight</strong></label>
                                            <div id="bar1">
                                                <div class="progress1">
                                                    <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar"
                                                         aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width:20%">
                                                        40%
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="file" name="httpPostedFileBase" id="file" class="form-control" />
                                            @*@Html.EditorFor(model => model.File, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })*@
                                        </div>

                                        <div class="col-md-1">
                                            <input type="submit" value="Upload" class="btn btn-primary" id="btn1" />
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                        <hr />

                    </div>
                </div>


                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @using (Html.BeginForm("UpdateData", "Booking", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <input type="hidden" value="2" name="type">
                                        <div class="col-md-3">
                                            <label for="file"><strong id="up-txt"> Update DTDC Amount </strong></label>
                                            <div id="bar2">
                                                <div class="progress2">
                                                    <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar"
                                                         aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width:20%">
                                                        40%
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            <input type="file" name="httpPostedFileBase" id="file" class="form-control" />
                                        </div>
                                        <div class="col-md-1">
                                            <input type="submit" value="Upload" class="btn btn-primary" id="btn2" />
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                        <hr />

                    </div>
                </div>


            </div>
        </div>
    </div>
</section>



@if (TempData["Success"] != null)
{
    <script>
    alert('@ViewBag.Success');
    </script>
}


@if(TempData["error"] != null)
{
    <script>
        alert('@TempData["error"]');
        </script>
}


<script>
    $(document).ready(function () {
        $('.progress1').hide();
        $('.progress2').hide();
    });

    $(function () {
        $('#btn1').click(function () {
            $('.progress1').show();

            setTimeout(function () {
                $("#bar1").html('<div class="progress1"><div class= "progress-bar progress-bar-success progress-bar-striped" role = "progressbar" aria - valuenow="40" aria - valuemin="0" aria - valuemax="100" style = "width:60%">60 %</div></div>');
            }, 5000);
        });

    });


    $(function () {
        $('#btn2').click(function () {
            $('.progress2').show();

            setTimeout(function () {
                $("#bar2").html('<div class="progress2"><div class= "progress-bar progress-bar-success progress-bar-striped" role = "progressbar" aria - valuenow="40" aria - valuemin="0" aria - valuemax="100" style = "width:60%">60 %</div></div>');
            }, 5000);
        });

    });
</script>