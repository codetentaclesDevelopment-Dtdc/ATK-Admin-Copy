@model IEnumerable<DtDc_Billing.Models.TransactionModel>


@{

    Layout = "~/Views/Shared/SupportLayout.cshtml";
}



<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>


<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h4>No Booking List</h4>
                </div>

                <div class="form-horizontal">
                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">



                                    @using (Html.BeginForm())
                                    {

                                        if (ViewBag.fromdate != null)
                                        {
                                            <div class="col-md-3">
                                                <input name="Fromdatetime" class="form-control" id="datepicker" value="@ViewBag.fromdate" placeholder="From Date" type="text">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-3">
                                                <input name="Fromdatetime" class="form-control" id="datepicker" placeholder="From Date" type="text">
                                            </div>
                                        }

                                        if (ViewBag.todate != null)
                                        {
                                            <div class="col-md-3">
                                                <input style="margin-right:50px" value="@ViewBag.todate" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-3">
                                                <input style="margin-right:50px" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                                            </div>
                                        }



                                        <div class="col-md-2">
                                            @Html.DropDownList("PfCode", null, "-ALL PF-", new { @class="form-control"})
                                        </div>


                                        <div class="col-md-2">
                                            <input type="submit" class="pull-right btn btn-primary" id="Show" name="Show" value="Show" />
                                        </div>

                                        <div class="col-md-2">
                                            <input type="submit" value="Export to Excel" name="Submit" class="btn btn-block btn-success sbmt" />
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>


                        <table id="table_display_block" class="table table-striped table-bordered table-responsive height-450">
                            <thead>
                                <tr>
                                    <th>
                                        Sr No
                                    </th>
                                    <th>
                                        Pf Code
                                    </th>
                                    <th>
                                        Consignment no
                                    </th>
                                    <th>
                                        Weight
                                    </th>

                                    <th>
                                        Pincode
                                    </th>
                                    <th>
                                        Mode
                                    </th>
                                    <th>
                                        Booking Date
                                    </th>
                                    <th>
                                        Employee Name
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 1;
                                    foreach (var item in Model)
                                    {
                                <tr>

                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pf_Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Consignment_no)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Actual_weight)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pincode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mode)
                                    </td>
                                    <td>
                                        @item.booking_date.Value.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.calinsuranceamount)
                                    </td>


                                </tr>

                                        i++;
                                    }
                                }
                            </tbody>
                        </table>

                        @if (ViewBag.totalamt != null)
                        {
                            <p> Total Amount : @ViewBag.totalamt </p>

                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

