@model IEnumerable<DtDc_Billing.Entity_FR.RaiseIssue>

@{
    ViewBag.Title = "RaiseIssueStatus";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-info">
                <div class="box-header with-border">

                    <p class="pull-right" style="text-decoration:underline;    font-size: 14px;">
                        @Html.ActionLink("Create New", "RaiseIssue")
                    </p>
                    <h4>Raise Issue Status</h4>

                </div>

                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="table-block">

                                    <table id="table_display_block" class="table table-striped table-bordered table-responsive height-450">

                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.RaiseIssue_Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Domain_Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.RaiseIssue_Description)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.RaiseIssue_datetime)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.RaiseIssue_FileName)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.RaiseIssue_Status)

                                            </th>
                                           
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RaiseIssue_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Domain_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RaiseIssue_Description)
                                                </td>
                                                <td>
                                                    @item.RaiseIssue_datetime.Value.Date.ToString("MM/dd/yyyy")
                                                </td>
                                                <td>
                                                    @*  @Html.DisplayFor(modelItem => item.RaiseIssue_FileName)*@
                                                    <br />
                                                    <img src="@item.RaiseIssue_ScreenShotFile" alt="Image" height="200" width="200" />


                                                </td>
                                                <td>

                                                    @if (item.RaiseIssue_Status == 0)
                                                    {
                                                        string strstatus = "Pending Issue";
                                                        @Html.DisplayName(strstatus);
                                                    }
                                                    else
                                                    {
                                                        string strstatus = "Issue Resolved";
                                                        @Html.DisplayName(strstatus);
                                                    }

                                                </td>
                                                @*<td>
                                                      @Html.ActionLink("Edit", "EditRaiseIssue", new { id = item.RaiseIssue_ID })
                                                      @Html.ActionLink("Delete", "DeleteRaiseIssue", new { id = item.RaiseIssue_ID })
                                                    </td>*@
                                            </tr>
                                        }

                                    </table>


                                    @if (TempData["Success"] != null)
                                    {
                                        <script>

        $(document).ready(function () {

            alert('@TempData["Success"]');

        });

                                        </script>

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>