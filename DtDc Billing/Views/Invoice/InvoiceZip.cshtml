
@{
    ViewBag.Title = "weightdifference";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h4>Downlod PDF File of Invoices</h4>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="form-horizontal">
                            @using (Html.BeginForm())
                            {

                                <div class="col-sm-10 form-group mb-15">
                                    <label for="period-from" class="col-sm-6 control-label">From Invoice No <span class="text-info">ATK/24-25/</span></label>
                                    <div class="col-sm-4 input-group date">
                                       
                                        @if (ViewBag.frominv != null)
                                        {
                                            <input type="text" class="form-control pull-right" id="datepicker" name="frominv" value="@ViewBag.frominv" required>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control pull-right" name="frominv" id="datepicker" required>
                                        }
                                    </div>
                                </div>
                                <div class="col-sm-10 form-group mb-15">
                                    <label for="period-to" class="col-sm-6 control-label">To Invoice No  <span class="text-info">ATK/24-25/</span></label>
                                    <div class="col-sm-4 input-group date">
                                        
                                        @if (ViewBag.toinv != null)
                                        {
                                            <input type="text" class="form-control pull-right" id="datepicker1" value="@ViewBag.toinv" name="toinv" required>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control pull-right" id="datepicker1" name="toinv" required>
                                        }
                                    </div>
                                </div>
                                <div class="col-sm-8 form-group mb-15">
                                    <input type="submit" value="Download" class="btn btn-primary pull-right sbmt" />
                                </div>



                            }
                        </div>
                    </div>
                  
                    <br>
                    <!-- /input-group -->

                   
                    <!-- /input-group -->

                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->

</section>
<!-- /.content -->
<style>
    #check-booking-list {
        display: block;
        min-height: 400px;
    }
</style>
