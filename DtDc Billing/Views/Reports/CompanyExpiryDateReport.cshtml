@model IEnumerable<DtDc_Billing.Models.CompanyExpiryModel>

@{
    ViewBag.Title = "CompanyReport";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h4> Company Expiry Date Report</h4>
                </div><!-- /.box-header -->
                <div class="box-body">

                 

                    <div class="row">
                        <div class="col-sm-6">
                            <table class="table table-striped table-bordered table-scroll">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CompanyId)

                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CompanyName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.startdate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.enddate)
                                        </th>
                                        <th>
                                            @Html.DisplayName("RemainingDays")
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.pfcode)
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.CompanyId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CompanyName)
                                        </td>
                                        <td>
                                            @{
                                                DateTime da = Convert.ToDateTime(item.startdate);
                                                string Startdate = Convert.ToString(da);
                                                string[] StrDate = Startdate.Split(' ');
                                                string stada = StrDate[0];
                                            }

                                            @stada
                                        </td>
                                        <td>
                                            @{
                                                DateTime endda = Convert.ToDateTime(item.enddate);
                                                string Enddate = Convert.ToString(endda);
                                                string[] StrEndDate = Enddate.Split(' ');
                                                string staendda = StrEndDate[0];
                                            }
                                            @staendda

                                        </td>
                                        <td>
                                            @{
                                                DateTime secondDate = Convert.ToDateTime(item.enddate);
                                                DateTime firstDate = DateTime.Today;//Convert.ToDateTime(item.startdate);

                                                String diff2 = (secondDate - firstDate).TotalDays.ToString();

                                            }
                                            @diff2 Days

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.pfcode)
                                        </td>
                                    </tr>

                                                }
                                   
                                </tbody>
                            </table>

                            <!-- /input-group -->
                            <!-- /input-group -->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


</section>


<style>
