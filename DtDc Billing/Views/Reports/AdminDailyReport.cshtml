@model IEnumerable<DtDc_Billing.Entity_FR.Receipt_details>

@{
    ViewBag.Title = "AdminDailyReport";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/fixedheader/3.1.3/css/fixedHeader.dataTables.min.css" rel="stylesheet" />

<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />

<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

@*consignment destinataion instead of paid amount make it amount only *@


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h4>Daily Sale Report</h4>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            @using (Html.BeginForm())
                    {

                        <div class="col-md-4 no-padding">

                            <label class="col-md-4">Date:</label>
                            <div class="col-md-8">


                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @if (ViewBag.date != null)
                            {
                                <input class="form-control pull-right" id="datepicker" value="@ViewBag.date" name="searcheddate" type="text">
                    }
                    else
                    {
                        <input class="form-control pull-right" id="datepicker" name="searcheddate" type="text">
            }
                                </div>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <label class="col-md-4">PF Code</label>
                            <div class="col-md-8">
                                <div class="pf-code">
                                    @Html.DropDownList("PfCode", null, "-Please select-", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <button type="submit" class="btn btn-block btn-primary">Search</button>
                            </div>
                        </div>
                        @*<input type="submit" value="Export to Excel" name="Submit" class="button" />*@



            }


                        </div>



                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="box box-info">
                        <div class="box-header with-border bginfo">
                            <h3 class="box-title titlnew">Daily Reportssss</h3>
                            <p class="totlpaymt pull-right label label-primary" style="opacity:0;">Total :  0</p>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" style="width:100%" class="display table table-striped table-bordered table-scroll table-responsive">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Consignment_No)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Destination)
                                        </th>
                                        <th>
                                            Amount
                                        </th>
                                        <th>
                                            Customer Phone
                                        </th>
                                        <th>
                                            Mode Of Payment
                                        </th>
                                        <th>
                                            Total Amount
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Consignment_No)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Destination)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Paid_Amount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sender_phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Credit)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Charges_Total)
                                    </td>
                                    @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Receipt_Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Receipt_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Receipt_Id })
        </td>*@
                                </tr>
                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box box-info">
                        <div class="box-header with-border bginfo">
                            <h3 class="box-title titlnew">Expense</h3>
                            <p class="totlpaymt pull-right label label-primary">Total : @ViewBag.expenseCount</p>
                        </div><!-- /.box-header -->

                        <div class="box-body">

                            <table id="example1" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Amount
                                        </th>
                                        <th>
                                            Reason
                                        </th>



                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.Expense)
                            {
                                <tr>
                                    <td>
                                        @item.Amount
                                    </td>
                                    <td></td>
                                    <td>
                                        @item.Rason
                                    </td>






                                    @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Receipt_Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Receipt_Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Receipt_Id })
                                </td>*@
                                </tr>
                    }
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="box box-info">
                        <div class="box-header with-border bginfo">
                            <h3 class="box-title titlnew">Payment</h3>
                            <p class="totlpaymt pull-right label label-primary">Total :  @ViewBag.PaymentCount</p>
                        </div><!-- /.box-header -->
                        <div class="box-body">

                            <table id="example1" class="table table-striped table-bordered table-responsive dataTable">
                                <thead>
                                    <tr>
                                        <th>
                                            Consignment No
                                        </th>
                                        <th>
                                            Amount
                                        </th>
                                        <th>
                                            Description
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.Payment)
                            {
                                <tr>
                                    <td>
                                        @item.Consignment_No
                                    </td>
                                    <td></td>
                                    <td>
                                        @item.amount
                                    </td>

                                    <td>
                                        @item.Description_
                                    </td>




                                    @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Receipt_Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Receipt_Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Receipt_Id })
                                </td>*@
                                </tr>
                    }
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box box-info">
                        <div class="box-header with-border bginfo">
                            <h3 class="box-title titlnew">Saving</h3>
                            <p class="totlpaymt pull-right label label-primary">Total :  @ViewBag.Savingscount</p>
                        </div><!-- /.box-header -->
                        <div class="box-body">

                            <table id="example1" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Saving Amount
                                        </th>
                                        <th>
                                            Reason
                                        </th>



                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.Savings)
                            {
                                <tr>
                                    <td>
                                        @item.Saving_amount
                                    </td>
                                    <td></td>
                                    <td>
                                        @item.Rason
                                    </td>






                                    @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Receipt_Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Receipt_Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Receipt_Id })
                                </td>*@
                                </tr>
                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-body text-right">
                            <br>
                            <!-- /input-group -->

                            <div class="col-sm-3 " style="float: right" ;>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-danger total-label">Total</button>
                                    </div>
                                    <!-- /btn-group -->
                                    <input type="text" class="form-control total-amount" value="@ViewBag.sum">
                                </div>
                            </div>
                            <!-- /input-group -->

                        </div>
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col-md-12">
                    <div class="box box-info">


                        <div class="box-body" id="formpaymode">



                            <div class="col-md-12">
                                <table id="formpaytble">

                                    <tbody>
                                        <tr>
                                            <td class=""> By Cash</td>
                                            <td class="sign">+</td>
                                            <td class=" "> 0</td>

                                        </tr>


                                        <tr>
                                            <td class=""> By Card</td>
                                            <td class="sign">+</td>
                                            <td class=" "> 0</td>

                                        </tr>


                                       
                                        <tr>
                                            <td class="">Payment</td>
                                            <td class="sign">+</td>
                                            <td class="">  0</td>
                                        </tr>
                                        <tr>
                                            <td class=" titlnew">Expense</td>
                                            <td class="sign">-</td>
                                            <td class="titlnew"> 0</td>
                                        </tr>

                                        <tr>
                                            <td class="  titlnewgreen">Total</td>
                                            <td class="sign"></td>
                                            <td class="titlnewgreen ">   0</td>

                                        </tr>

                                    </tbody>
                                </table>


                            </div>
                        </div>






                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
