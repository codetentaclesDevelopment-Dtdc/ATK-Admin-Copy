@model IEnumerable< DtDc_Billing.Entity_FR.Sector>

@{
    ViewBag.Title = "Add_SectorPin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }

    @using (Html.BeginForm("Add_SectorPin", "Admin"))
    {

        <section class="content">
            <div class="col-sm-12 no-padding">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h4>Add Sector</h4>
                    </div>
                   
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-horizontal">
                                <div class="box-body">
                                    <table id="add-sector-pin" class="table table-responsive table-bordered">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Sector_Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Pincode_values)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Franchisee.PF_Code)
                                                </th>
                                             
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                @Html.HiddenFor(modelItem => item.Sector_Id)
                                                <tr>

                                                    <td>
                                                        <label>@Html.DisplayFor(modelItem => item.Sector_Name)</label>
                                                    </td>
                                                    <td>
                                                        <label>@Html.TextAreaFor(modelItem => item.Pincode_values, new { htmlAttributes = new { @class = "form-control input-sm" } })</label>
                                                    </td>
                                                    <td>
                                                        <label>@Html.DisplayFor(modelItem => item.Franchisee.PF_Code)</label>
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="mt-15">
                                        <input type="hidden" name="pfcode" value="@ViewBag.pfcode" />
                                        @Html.ValidationMessage("PinError")
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }


<style>
    .content table td label input {
        /*width: 250px;*/
    }
    .mt-15 {
        margin-top: 15px;
    }
    @@media (max-width: 768px) {
        #add-sector-pin {
            display: block;
        }
    }
</style>

@if (TempData["Success1"] != null)
{
    <script>

        $(document).ready(function () {

            alert('Franchisee Added Success fully Please Fill Ratemater');

        });

    </script>

}
    <script>
        $(function () {
            $('#franchisee-list').addClass('active');
        });
    </script>