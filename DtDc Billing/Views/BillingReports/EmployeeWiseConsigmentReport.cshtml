@model IEnumerable<DtDc_Billing.Entity_FR.Issue>

@{
    ViewBag.Title = "Remaining";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- Main content -->
<section class="content">
    <div class="box">
        <!-- column -->
        <div class="row">
            <!-- Horizontal Form -->
            <div class="col-sm-6">
                <!-- form start -->
                <div class="form-horizontal">
                    <div class="box-body">
                        <!-- select -->
                        @using (Html.BeginForm())
                        {
                            <div class="form-group">


                                <label class="col-sm-3 control-label">Select PFID</label>
                                <div class="col-sm-9">
                                    <div  class="pf-code">
                                    @Html.DropDownList("PfCode", "-ALL PF-")
                                        </div>
                                </div>

                            </div>

                            <div class="col-md-6">
                                <input type="submit" class="btn btn-primary pull-right sbmt" name="Show" value="Show" />
                            </div>

                        }
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-sm-7 col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Issue Date</th>
                                <th>Start No</th>
                                <th>End No </th>
                                <th>No Of Consignment</th>
                                <th>Used</th>
                                <th>Ramining</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int j = 0;

                                foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.Inssuedate</td>

                                        <td>@i.startno</td>

                                        <td>@i.endno</td>

                                        <td> @NoofConsignments(i.startno, i.endno) </td>
                                        <td>
                                            @ViewBag.str[j]
                                        </td>
                                        <td>
                                            @(Convert.ToInt16(NoofConsignments(i.startno, i.endno)) - Convert.ToInt16(ViewBag.str[j]))
                                        </td>
                                        <td><input id="showd" class="showd" type="button" value="View" data-datac="@i.startno" data-datad="@i.endno" /></td>
                                    </tr>
                                    j++;
                                }
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-sm-5 col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Consignment no</th>
                               
                            </tr>
                        </thead>
                        <tbody></tbody>
                       
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@functions {

    public long NoofConsignments(string startno, string endno)
    {

        long startConsignment = Convert.ToInt64(startno.Substring(1));
        long EndConsignment = Convert.ToInt64(endno.Substring(1));

        long diff = EndConsignment - startConsignment + 1;

        return diff;

    }

