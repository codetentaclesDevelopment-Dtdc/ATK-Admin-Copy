@{

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@model IEnumerable<DtDc_Billing.Entity_FR.TransactionView>


<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h4>Business Analysis</h4>
                </div>

                <div class="form-horizontal">
                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">




                                    @using (Html.BeginForm())
                {


                    if (ViewBag.Custid != null)
                    {
                        <div class="col-md-4">
                            <input name="Custid" style="margin-right:10px" class="form-control" id="custid" value="@ViewBag.Custid" placeholder="Customer id " type="text">
                        </div>
}
else
{
                    <div class="col-md-4">
                        <input name="Custid" style="margin-right:10px" class="form-control" id="custid" placeholder="Customer id " type="text">
                    </div>
}
if (ViewBag.fromdate != null)
{
                    <div class="col-md-3">
                        <input name="Fromdatetime" class="form-control" id="datepicker" value="@ViewBag.fromdate" placeholder="From Date" type="text">
                    </div>
}
else
{
                    <div class="col-md-3">
                        <input name="Fromdatetime" class="form-control" id="datepicker" placeholder="From Date" type="text">
                    </div>
}
if (ViewBag.todate != null)
{
                    <div class="col-md-3">
                        <input style="margin-right:50px" value="@ViewBag.todate" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                    </div>
}
else
{
                    <div class="col-md-3">
                        <input style="margin-right:50px" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                    </div>
}
                    <div class="col-md-2">
                        <input type="submit" class="pull-right btn btn-primary" id="Show" name="Show" value="Show" />
                    </div>
}
                                </div>
                            </div>
                        </div>

                        <table id="check-booking-list" class="table table-striped table-bordered table-responsive height-450">
                            <thead>
                                <tr>
                                    <th>
                                        Sr No
                                    </th>
                                    <th>
                                        Consignment no
                                    </th>
                                    <th>
                                        Booking Date
                                    </th>
                                    <th>
                                        Weight
                                    </th>
                                    <th>
                                        Destination
                                    </th>
                                    <th>
                                        Pincode
                                    </th>
                                    <th>
                                        Mode
                                    </th>
                                    <th>
                                        Amount
                                    </th>


                                    <th>
                                        Dtdc Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 1;
                foreach (var item in Model)
                {
                                <tr>

                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Consignment_no)
                                    </td>
                                    <td>
                                        @item.booking_date.Value.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.chargable_weight)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pincode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Amount)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.dtdcamount)
                                    </td>

                                </tr>

i++;
}
                                }
                            </tbody>
                        </table>
                        <br>

                        <!-- /input-group -->

                        <div class="col-sm-4 ">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-primary total-label">Total</button>
                                </div>
                                <!-- /btn-group -->
                                <input type="text" class="form-control total-amount" placeholder="0" value="@Model.Sum(m=>(m.Amount))">
                            </div>
                        </div>
                        <!-- /input-group -->
                        <!-- /input-group -->

                        <div class="col-sm-4 ">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-success">DTDC Total</button>
                                </div>
                                <!-- /btn-group -->
                                <input type="text" class="form-control total-amount" style="border-color:#008d4c" placeholder="0" value="@Model.Sum(m=>(m.dtdcamount))">
                            </div>
                        </div>
                        <!-- /input-group -->
                        <!-- /input-group -->

                        <div class="col-sm-4 ">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-danger">Profit</button>
                                </div>
                                <!-- /btn-group -->
                                <input type="text" class="form-control total-amount" style="border-color:#d73925" placeholder="0" value="@Model.Sum(m=>(m.Amount-(m.dtdcamount ?? 0)))">
                            </div>
                        </div>
                        <!-- /input-group -->




                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


