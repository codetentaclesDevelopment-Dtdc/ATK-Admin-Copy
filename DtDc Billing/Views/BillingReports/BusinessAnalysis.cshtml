</style>
<script>
    $(document).ready(function () {

        $('#Show').click(function () {
            var cutid = $('#custid').val();
            var frmdate = $('#datepicker').val();
            var todate = $('#datepicker1').val();


            if (cutid == "") {
                alert("Please Enter Customer Id");
                return false;
            }
            else if (frmdate == "") {
                alert("Please Enter From Date");
                return false;
            }
            else if (todate == "") {
                alert("Please Enter To Date");
                return false;
            }
            else { return true; }


        });
    });

</script>





