@model IEnumerable<DtDc_Billing.Entity_FR.Invoice>


@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

<!-- Main content -->
<section class="content">



    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Add Payment</h4>
                </div>
                <div class="modal-body">

                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#home">Cash</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#menu1">Cheque</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#menu2">RTGS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#menu3">Credit Note</a>
                        </li>
                    </ul>


                    <div class="tab-content">
                        <div id="home" class="tab-pane active">
                            <br>
                            <h5> <span class="Netamount text-info "></span><span class="Balance text-danger pull-right"></span></h5>
                            <div id="CashP">
                                @{ Html.RenderPartial("CashPartial", (DtDc_Billing.Entity_FR.Cash)ViewBag.Cash);}
                            </div>
                        </div>
                        <div id="menu1" class="tab-pane fade">
                            <br>
                            <h5> <span class="Netamount text-info "></span><span class="Balance text-danger pull-right"></span></h5>
                            <div id="ChequeP">
                                @{ Html.RenderPartial("ChequePartial", (DtDc_Billing.Entity_FR.Cheque)ViewBag.Cheque);}
                            </div>
                        </div>
                        <div id="menu2" class="tab-pane fade">
                            <br>
                            <h5> <span class="Netamount text-info "></span><span class="Balance text-danger pull-right"></span></h5>
                            <div id="NeftP">
                                @{ Html.RenderPartial("NeftPartial", (DtDc_Billing.Entity_FR.NEFT)ViewBag.Neft);}
                            </div>
                        </div>

                        <div id="menu3" class="tab-pane fade">
                            <br>
                            <h5> <span class="Netamount text-info "></span><span class="Balance text-danger pull-right"></span></h5>
                            <div id="CreditP">
                                @{ Html.RenderPartial("CreditNotePartial", (DtDc_Billing.Entity_FR.CreditNote)ViewBag.Credit);}
                            </div>
                        </div>
                    </div>


                </div>
                
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>





    <div class="box box-info">

        <div class="box-header with-border">
            <h4>Add Payment</h4>
        </div><!-- /.box-header -->
        <div class="box-body">
            <!-- column -->
            <!-- Horizontal Form -->
            @using (Html.BeginForm())
            {

                if (ViewBag.Custid != null)
                {
                    <div class="col-md-3">
                        <input name="Custid" style="margin-right:10px" class="form-control" id="custid" value="@ViewBag.Custid" placeholder="CustiomerId" type="text">
                    </div>
                }
                else
                {
                    <div class="col-md-3">
                        <input name="Custid" style="margin-right:10px" class="form-control" id="custid" placeholder="CustiomerId" type="text">
                    </div>
                }
                if (ViewBag.fromdate != null)
                {
                    <div class="col-md-3">
                        <input name="Fromdatetime" class="form-control" id="datepicker" value="@ViewBag.fromdate" placeholder="From Date" type="text">
                    </div>
                }
                else
                {
                    <div class="col-md-3">
                        <input name="Fromdatetime" class="form-control" id="datepicker" placeholder="From Date" type="text">
                    </div>
                }

                if (ViewBag.todate != null)
                {
                    <div class="col-md-3">
                        <input style="margin-right:50px" value="@ViewBag.todate" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                    </div>
                }

                else
                {
                    <div class="col-md-3">
                        <input style="margin-right:50px" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                    </div>
                }

            

                <div class="col-md-3">
                    <input type="submit" class="btn btn-primary pull-right sbmt" name="Show" value="Show" />
                </div>


            }

            <table id="table_display_block" class="table table-striped table-bordered table-responsive height-450">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customer_Id)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.invoiceno)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.invoicedate)
                        </th>
                        @*<th>
                        @Html.DisplayNameFor(model => model.periodfrom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.periodto)
                    </th>*@
                        @*<th>
                        @Html.DisplayNameFor(model => model.total)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Royalty_charges)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Docket_charges)
                    </th>*@
                        <th>Sub Total</th>
                        <th>
                            FSC
                        </th>
                        <th>
                            FSC Total
                        </th>
                        <th>
                            GST
                        </th>
                        <th>
                            GST Total
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.netamount)
                        </th>
                        <th>Paid</th>
                        <th>Balance</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.netamount == item.paid)
                                {
                                    <p class="text-success"><i class="fa fa-tick"></i> Paid</p>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-success addpmt" data-toggle="modal" data-datac="@item.invoiceno" data-dataamt="@item.netamount" data-databal="@item.paid" data-target="#modal-default">
                                        Add Payments
                                    </button>
                                }
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Customer_Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.invoiceno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tempInvoicedate)
                            </td>
                            @*<td>
                            @Html.DisplayFor(modelItem => item.Tempdatefrom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TempdateTo)
                        </td>*@
                            @*<td>
                            @Html.DisplayFor(modelItem => item.total)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Royalty_charges)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Docket_charges)
                        </td>*@
                            <td>
                                @(item.total + (item.Docket_charges ?? 0) + (item.Royalty_charges ?? 0) )
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fullsurchargetax)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fullsurchargetaxtotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.servicetax)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.servicetaxtotal)
                            </td>

                            <td>
                                @item.netamount
    @*.Value.ToString("##")*@
                            </td>
                            <td>
                                @(item.paid ?? 0)
                            </td>
                            <td>
                                @(item.netamount - (item.paid ?? 0))
                            </td>





                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.box -->
    <!--/.col (right) -->
    <!-- /.row -->
</section>
<!-- /.content -->


<script>

    $(document).ready(function () {
        $(".addpmt").click(function () {
            var d = $(this).data('datac');
            var netamt = $(this).data('dataamt');
            netamt = Math.round(netamt);
            var paid = $(this).data('databal');

            $('.Invoiceno').val(d);
            $('.Netamount').text('Net Amount Is' + " : " + netamt);
            $('.Balance').text('Balance Amount Is' + " : " + (netamt - paid));


        });

        $('#tempinserteddate,#tempch_date,#tempneftdate,#cr_date').datepicker({
            autoclose: true,
            format: 'dd-mm-yyyy'
        })
    });
</script>
