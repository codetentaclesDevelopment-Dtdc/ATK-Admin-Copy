@model DtDc_Billing.Entity_FR.Franchisee

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h4>Edit Franchisee</h4>
                </div>
                <!-- /.box-header -->


                @using (Html.BeginForm())
    {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="box-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.F_Id, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    @Html.ValidationMessageFor(model => model.F_Id, "", new { @class = "text-danger" })


                    @Html.HiddenFor(model => model.PF_Code)

                    <div class="form-group">
                        <label class="col-md-2"> Franchisee Address</label>
                        <div class="col-md-5">
                            @Html.TextAreaFor(model => model.F_Address, new { @class = "form-control input-sm", @rows = 3 })
                            @Html.ValidationMessageFor(model => model.F_Address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2"> Owner Name </label>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.OwnerName, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.OwnerName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2"> Branch Name</label>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.BranchName, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.BranchName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2"> GST No </label>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.GstNo, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.GstNo, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Pan_No, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.Pan_No, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.Pan_No, "", new { @class = "text-danger" })
                        </div>
                    </div>





                    <div class="form-group">
                        <label class="col-md-2"> Contact No</label>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-2"> Franchisee Name </label>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.Franchisee_Name, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.Franchisee_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2"> Branch Area</label>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.Branch_Area, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.Branch_Area, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2"> Branch Code <b>(This code will appear in invoice No)</b></label>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.BranchCode, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.Branch_Area, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

                    </div>

}

            </div>
</div>
</div>
</section>

<script>
    $(function () {
        $('#franchisee-list').addClass('active');
    });
</script>