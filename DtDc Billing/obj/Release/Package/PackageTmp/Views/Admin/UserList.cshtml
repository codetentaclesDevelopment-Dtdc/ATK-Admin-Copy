
@model IEnumerable<DtDc_Billing.Entity_FR.User>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <a href="@Url.Action("CreateUser","Admin")" class="btn btn-primary"> Add User</a>
                </div>

                <form class="form-horizontal">
                    <div class="box-body">

                        <table id="table_display_block" class="table table-striped table-bordered table-responsive height-450">
                            <thead>
                                <tr>
                                    <th>

                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Contact_no)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Usertype)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PF_Code)
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink("EditUser", "EditUser", new { id = item.User_Id })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Contact_no)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Usertype)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PF_Code)
                                        </td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                     
                    </div>
                </form>


            </div>
        </div>
    </div>

</section>
<style>
    .pagination {
        float: right;
    }

</style>
<script>
    $(function () {
        $('#table_display_block').dataTable({
            "bPaginate": false,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": false,
            "bAutoWidth": false
        });
    });
</script>