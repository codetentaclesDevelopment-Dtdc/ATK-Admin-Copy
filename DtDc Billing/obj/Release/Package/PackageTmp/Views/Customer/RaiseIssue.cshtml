@model DtDc_Billing.Models.AddRaiseIssueModel

@{
    ViewBag.Title = "RaiseIssue";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />

<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>


<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-info">
                <div class="box-header with-border invoice-intro-block">
                    <h4>
                        Raise Issue


                    </h4>
                </div>

                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">


                                @using (Html.BeginForm("RaiseIssue", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                        <div class="form-group">
                                            @Html.LabelFor(model => model.RaiseIssue_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBox("RaiseIssue_Name", null, new { @class = "form-control", @placeholder = "Name" })
                                                @Html.ValidationMessageFor(model => model.RaiseIssue_Name, "", new { @class = "text-danger" })

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Domain_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBox("Domain_Name", null, new { @class = "form-control", @placeholder = "Domain Name" })
                                                @Html.ValidationMessageFor(model => model.Domain_Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.RaiseIssue_Description, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextArea("RaiseIssue_Description", null, new { @class = "form-control", style = "height: 80px;", @placeholder = "RaiseIssue Description" })
                                                @Html.ValidationMessageFor(model => model.RaiseIssue_Description, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        @*<div class="form-group">
                                              <label class="col-sm-2 control-label">Date</label>
                                              <div class="col-md-10">
                                                @Html.EditorFor(model => model.RaiseIssue_datetime, new { htmlAttributes = new { @class = "form-control"} })
                                                @Html.ValidationMessageFor(model => model.RaiseIssue_datetime, "", new { @class = "text-danger" })
                                              </div>
                                            </div>*@

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Upload File</label>
                                            <div class="col-md-10">
                                                <input type="file" name="file" id="file" class="form-control" />
                                                @Html.ValidationMessageFor(m => m.file, "", new { @class = "text-danger" })

                                                @ViewBag.Message
                                            </div>
                                        </div>

                                        <br />
                                        <br />

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Create" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script>

  //$('#H_datetime').datepicker({

  //})


  $('#RaiseIssue_datetime').datepicker({
    autoclose: true,
    format: 'mm/dd/yyyy'
  })
</script>
