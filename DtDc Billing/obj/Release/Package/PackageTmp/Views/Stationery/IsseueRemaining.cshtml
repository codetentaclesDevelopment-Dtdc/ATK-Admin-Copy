@model IEnumerable<DtDc_Billing.Entity_FR.Issue>

@{
    ViewBag.Title = "Remaining";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- Main content -->
<section class="content">
    <div class="box">
        <!-- column -->
        <div class="row">
            <!-- Horizontal Form -->
            <div class="col-sm-6">
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <!-- select -->
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Select PFID</label>
                            <div class="col-sm-9">
                                @Html.DropDownList("Pf_code", null, htmlAttributes: new { @class = "form-control input-sm" })
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-sm-7 col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Issue Date</th>
                                <th>Start No</th>
                                <th>End No </th>
                                <th>No Of Consignment</th>
                                <th>Used</th>
                                <th>Ramining</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int j = 0;

                                foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.Inssuedate</td>

                                        <td>@i.startno</td>

                                        <td>@i.endno</td>

                                        <td> @NoofConsignments(i.startno, i.endno) </td>
                                        <td>
                                            @ViewBag.str[j]
                                        </td>
                                        <td>
                                            @(Convert.ToInt16(NoofConsignments(i.startno, i.endno)) - Convert.ToInt16(ViewBag.str[j]))
                                        </td>
                                    </tr>
                                    j++;
                                }
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-sm-5 col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@functions {

    public long NoofConsignments(string startno, string endno)
    {

        long startConsignment = Convert.ToInt64(startno.Substring(1));
        long EndConsignment = Convert.ToInt64(endno.Substring(1));

        long diff = EndConsignment - startConsignment;

        return diff;

    }

