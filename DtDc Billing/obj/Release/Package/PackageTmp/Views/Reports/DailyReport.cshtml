@model IEnumerable<DtDc_Billing.Entity_FR.Receipt_details>
@{
    ViewBag.Title = "DailyReport";
    Layout = "~/Views/Shared/CashCounterLayout.cshtml";
}



<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />

<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>



    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">Daily Report</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                @using (Html.BeginForm())
                                {

                                    <div class="col-md-6 no-padding">
                                        <div class="form-group">
                                            <label class="col-md-2 no-padding">Date:</label>
                                            <div class="col-md-8">
                                                <div class="input-group date">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </div>
                                                    @if (ViewBag.date != null)
                                                    {
                                                        <input class="form-control pull-right" id="datepicker" value="@ViewBag.date" name="searcheddate" type="text">
                                                    }
                                                    else
                                                    {
                                                        <input class="form-control pull-right" id="datepicker" name="searcheddate" type="text">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.form-group -->
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-block btn-success">Search</button>
                                        </div>
                                    </div>


                                    <div class="col-sm-2">
                                        <input type="submit" value="Export to Excel" name="Submit" class="btn btn-block btn-success" />
                                    </div>


                                }


                            </div>



                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">Daily Report</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <table id="example1" class="table table-striped table-bordered table-scroll">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Consignment_No)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Destination)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.sender_phone)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Sender)
                                            </th>


                                            <th>
                                                @Html.DisplayNameFor(model => model.SenderCity)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.SenderPincode)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Reciepents_phone)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Reciepents)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ReciepentsPincode)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Paid_Amount)
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Consignment_No)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Destination)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.sender_phone)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Sender)
                                                </td>


                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SenderCity)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SenderPincode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Reciepents_phone)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Reciepents)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ReciepentsPincode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Paid_Amount)
                                                </td>
                                                @*<td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Receipt_Id }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.Receipt_Id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Receipt_Id })
                                                    </td>*@
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">Expense</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <p>Total Expense Amt</p>  @ViewBag.expenseCount
                                <table id="example1" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                Amount
                                            </th>
                                            <th>
                                                Reason
                                            </th>



                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Expense)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Amount
                                                </td>
                                                <td></td>
                                                <td>
                                                    @item.Rason
                                                </td>






                                                @*<td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Receipt_Id }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.Receipt_Id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Receipt_Id })
                                                    </td>*@
                                            </tr>
                                        }
                                    </tbody>

                                </table>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">Payment</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <p>Total Payment Amt</p>  @ViewBag.PaymentCount
                                <table id="example1" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                Consignment No
                                            </th>
                                            <th>
                                                Amount
                                            </th>
                                            <th>
                                                Description
                                            </th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Payment)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Consignment_No
                                                </td>
                                                <td></td>
                                                <td>
                                                    @item.amount
                                                </td>

                                                <td>
                                                    @item.Description_
                                                </td>




                                                @*<td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Receipt_Id }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.Receipt_Id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Receipt_Id })
                                                    </td>*@
                                            </tr>
                                        }
                                    </tbody>

                                </table>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">Payment</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <p>Total Savings Amt </p>  @ViewBag.Savingscount
                                <table id="example1" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                Saving Amount
                                            </th>
                                            <th>
                                                Reason
                                            </th>



                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Savings)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Saving_amount
                                                </td>
                                                <td></td>
                                                <td>
                                                    @item.Rason
                                                </td>






                                                @*<td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Receipt_Id }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.Receipt_Id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Receipt_Id })
                                                    </td>*@
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-info">
                            <div class="box-body text-right">
                                <p>Total Amount </p>  @ViewBag.sum
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>



<script>
    //Date picker
    $('#datepicker').datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy'
    })

</script>

<style>
    .box-body {
        OVERFLOW-X: SCROLL;
    }
</style>