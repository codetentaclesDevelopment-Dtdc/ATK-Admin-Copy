<script>

    var stateId = $("#PfCode").val();
    var selectedemp = '@ViewBag.selectedemp';

    $.ajax
        ({
            url: '/Reports/GetUserList',
            type: 'POST',
            datatype: 'application/json',
            data: { Pfcode: stateId },
            success: function (result) {
                $("#Employees").html("");
                $.each($.parseJSON(result), function (i, city) {
                    $("#Employees").append
                        ($('<option></option>').val(city.Name).html(city.Name))
                })
                if (selectedemp != null) {
                    $("#Employees").val(selectedemp);
                }
            },

        });


    $('#PfCode').change(function () {

        var stateId = $("#PfCode").val();
        $.ajax
            ({
                url: '/Reports/GetUserList',
                type: 'POST',
                datatype: 'application/json',
                data: { Pfcode: stateId },
                success: function (result) {
                    $("#Employees").html("");
                    $.each($.parseJSON(result), function (i, city) {
                        $("#Employees").append
                            ($('<option></option>').val(city.Name).html(city.Name))
                    })
                    $('#Employees').prepend('<option value="" selected>Please Select</option>');
                },

            });
    });


    $('#datepicker').datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy'
    })

    $('#datepicker1').datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy'
    })


</script>



