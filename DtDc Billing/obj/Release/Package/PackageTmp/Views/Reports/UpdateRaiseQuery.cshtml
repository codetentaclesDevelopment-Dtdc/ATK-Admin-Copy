@model DtDc_Billing.Entity_FR.RaiseQuery

@{
    ViewBag.Title = "UpdateRaiseQuery";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>






<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-info">
                <div class="box-header with-border invoice-intro-block">
                    <h4>
                        Update Raise Query Status


                    </h4>
                </div>

                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">

                                @using (Html.BeginForm("UpdateRaiseQuery", "Reports"))
                                {
                                    @Html.AntiForgeryToken()

                                <div class="form-horizontal">

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    @Html.Hidden("RaiseQueries_ID")
                                    @Html.Hidden("RaiseQueries_Status")
                                    @Html.Hidden("RaiseQueries_datetime")
                                    @Html.Hidden("Pf_code")
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.RaiseQueries_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextBox("RaiseQueries_Name", null, new { @class = "form-control", @readonly = true })

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Domain_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextBox("Domain_Name", null, new { @class = "form-control", @readonly = true })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.RaiseQueries_Description, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextArea("RaiseQueries_Description", null, new { @class = "form-control", @readonly = true, style = "height: 80px;" })
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        @Html.LabelFor(model => model.RaiseQueries_Status, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">

                                            @Html.DropDownList("Status", "-Please select-")
                                            @*@Html.DropDownList("RaiseIssue_Status", null, new { @class = "form-control" })*@
                                            @Html.ValidationMessageFor(model => model.RaiseQueries_Status, "", new { @class = "text-danger" })


                                        </div>
                                    </div>

                                    <br />
                                    <br />

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                                }



                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>


<script>

    $('#H_datetime').datepicker({
        autoclose: true,
        format: 'mm/dd/yyyy'
    })
</script>

@if (TempData["Success"] != null)
{
    <script type="text/javascript">
        alert("@TempData["Success"]");
    </script>
}